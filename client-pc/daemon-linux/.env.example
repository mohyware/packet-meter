# PacketPilot Daemon .env example
# Copy to .env and adjust values. These override config.yaml.

# Server connection
PACKETPILOT_SERVER_HOST=localhost
PACKETPILOT_SERVER_PORT=8080
PACKETPILOT_SERVER_USE_TLS=false
PACKETPILOT_SERVER_API_KEY=change-me

# Device identity
#PACKETPILOT_SERVER_DEVICE_ID=your-device-id

# Logging
PACKETPILOT_LOGGING_LEVEL=debug
#PACKETPILOT_LOGGING_FILE=/var/log/packetpilot/daemon.log

# Monitor
PACKETPILOT_MONITOR_INTERFACE=any
PACKETPILOT_MONITOR_UPDATE_INTERVAL=2s
PACKETPILOT_MONITOR_BUFFER_SIZE=1000

# Reporter
PACKETPILOT_REPORTER_REPORT_INTERVAL=5s
PACKETPILOT_REPORTER_BATCH_SIZE=100
PACKETPILOT_REPORTER_RETRY_ATTEMPTS=3
PACKETPILOT_REPORTER_RETRY_DELAY=2s

# Optional explicit config path
#PACKETPILOT_CONFIG=/etc/packetpilot/config.yaml
